#!/bin/bash

# Application directory
DIRECTORY="/opt/tserver"
# Name of the python virtual environment
venv_name=tserver

#==============================================================================
# Install missing packages
#==============================================================================
# Install pip3
echo "Installing pip3 ..."
which pip3 &>/dev/null
if [ $? -eq 1 ]; then
    python3 $DIRECTORY/scripts/get-pip.py
    echo "pip3 installed."
fi

#==============================================================================
# Add virtual environment
#==============================================================================
echo "Adding virtual environment"
echo "Installing virtualenv..."
wcich virtualenv &>/dev/null
if [ $? ]; then
    pip3 --no-cache-dir install virtualenv
fi

echo "Creating new virtual environment for Python packages ..."
# Create virtual environment
virtualenv -p `which python3` "$DIRECTORY/bin/$venv_name"
# Activate virtenv
source "$DIRECTORY/bin/$venv_name/bin/activate"

#==============================================================================
# Install python packages from .deb
#==============================================================================
echo "Installing linux packages from .deb files."
fuser /var/lib/dpkg/lock &>/dev/null
if [ $? -eq 1 ]; then
  echo "Installing mysql-connector-python"
  yes | dpkg -i "$DIRECTORY/packets/mysql-connector-python-py3_2.1.3-1ubuntu14.04_all.deb"
else
  echo "dpkg lock is locked. Can't install packages. Are you installing something?"
  exit 1
fi

#==============================================================================
# Install python packages
#==============================================================================
echo "Installing python packages ..."
pip3 --no-cache-dir install -r $DIRECTORY/bin/requirements.txt
